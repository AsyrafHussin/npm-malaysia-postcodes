{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["jest"],
    "lib": ["es6", "dom", "es2017"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "__tests__"]
}
